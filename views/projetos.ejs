<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projetos</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body class="with-nav">
    <nav class="site-nav">
        <div class="nav-inner">
            <a class="nav-brand" href="/">Caio Almeida</a>
            <ul>
                <li><a href="/sobre">Sobre</a></li>
                <li><a href="/disciplinas">Disciplinas</a></li>
                <li><a href="/projetos">Projetos</a></li>
                <li><a href="/contato">Contato</a></li>
            </ul>
        </div>
    </nav>

    <main class="page-content proj-card">
        <h1>Projetos</h1>

        <% if (projetos && projetos.length) { %>
            <div class="proj-list">
                <% projetos.forEach(function(proj) { %>
                    <div class="proj-item">
                        <h2><%= proj.name %></h2>
                        <p><%= proj.desc %></p>
                        <a href="<%= proj.link %>" class="proj-link" target="_blank">Ver mais â†’</a>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p>Nenhum projeto encontrado.</p>
        <% } %>
    </main>
</body>
</html>